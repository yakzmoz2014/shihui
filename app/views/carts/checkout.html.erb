<div class="row">
  <div class="col-md-12">
    <h2>购物明细</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明细</th>
          <th>单价</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td><%= link_to(cart_item.meetup.title, meetup_path(cart_item.meetup)) %></td>
            <td><%= cart_item.meetup.price %></td>
            <td><%= cart_item.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        小计： ￥<%= render_cart_total_price(current_cart) %>
      </span>
    </div>

    <hr>

    <h2>订单信息</h2>
    <br /><br />

    <div class="order-form">
      <%= simple_form_for @order do |f| %>
        <legend>订购人</legend>
        <div class="form-group col-md-6">
            <%= f.input :billing_name, label: "订购人姓名", input_html: {value: "Underwood"}  %>
        </div>
        <div class="form-group col-md-6">
          <%= f.input :billing_address, label: "订购人地址", input_html: {value: "WhiteHouse, Washington, DC"} %>
        </div>

        <legend> 收货人</legend>
        <div class="form-group col-md-6">
          <%= f.input :shipping_name, label: "收货人姓名", input_html: {value: "Underwood"}   %>
        </div>
        <div class="form-group col-md-6">
          <%= f.input :shipping_address, label: "收货人地址", input_html: {value: "WhiteHouse, Washington, DC" } %>
        </div>

        <div class="checkout">
          <%= f.submit "生成订单", class: "btn btn-lg btn-danger pull-right", data: {disable_with: "Submitting..."} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
